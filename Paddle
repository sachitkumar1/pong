package pong;
import java.awt.Rectangle;
import java.awt.event.KeyEvent;

import Utilities.GDV5;
public class Paddle extends Rectangle {

	//paddle dimensions parameters
	public Paddle(int x, int y, int width, int height) {
		super(x,y,width,height);
		}
	
	//Moving paddle with arrows
	
	public void MoveArrows() {
		//up arrow or U
		if((GDV5.KeysPressed[KeyEvent.VK_UP]||GDV5.KeysPressed[KeyEvent.VK_U]) && this.getY() >=0) {
			this.y -=10;
			
		}
		//down arrow or J
		if ((GDV5.KeysPressed[KeyEvent.VK_DOWN]||GDV5.KeysPressed[KeyEvent.VK_J])&&this.getY()<= GDV5.getMaxWindowY() -100) {
			this.y+=10;
	
		}

	}
	//Moving paddle with W and S keys
	
	public void MoveWASD() {
		//w
		if(GDV5.KeysPressed[KeyEvent.VK_W] && this.getY() >= 0) {
			this.y -=10;
		
		}
		//X
		if (GDV5.KeysPressed[KeyEvent.VK_S]&&this.getY()<= GDV5.getMaxWindowY()- 100) {
			this.y+=10;
	
		}
	
	
	}
	
	public void MoveTest() {
		if(GDV5.KeysPressed[KeyEvent.VK_M]) {
			this.y+=10;
		}
	}
	
	}

	
	

